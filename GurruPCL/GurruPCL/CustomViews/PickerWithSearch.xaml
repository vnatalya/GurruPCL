<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GurruPCL.CustomViews.PickerWithSearch">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="SearchEntry" TextColor="#666666" TextChanged="SearchEntry_TextChanged" HorizontalOptions="FillAndExpand"/>
                <Image Source="search" Scale="0.5"/>
            </StackLayout>
            <ListView/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>